            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:text="Event Fees : "
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceSmall"
                    />
                <TextView
                    android:id="@+id/tv_Fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:text="0"
                    android:textAppearance="?android:textAppearanceSmall"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:text="Total Stalls : "
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceSmall"
                    />
                <TextView
                    android:id="@+id/tv_totalstalls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:text="0"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:text="No of Participants : "
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceSmall"
                    />
                <TextView
                    android:id="@+id/tv_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:paddingLeft="10dp"
                    android:text="0"
                    android:textAppearance="?android:textAppearanceSmall"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="Date : "
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceSmall" />

                <TextView
                    android:id="@+id/tv_fromdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="DD-MM-YYYY"
                    android:textAppearance="?android:textAppearanceSmall" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="to"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceSmall" />
                <TextView
                    android:id="@+id/tv_todate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="DD-MM-YYYY"
                    android:textAppearance="?android:textAppearanceSmall" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
               <!-- <Button
                    android:id="@+id/attendence_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendence"/>-->
                <Button
                    android:layout_weight="1"
                    android:id="@+id/attendence_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:theme="@style/GreenButton"
                    android:textColor="@color/white"
                    android:drawableRight="@drawable/attendence"
                    android:drawableTint="@color/white"
                    android:drawablePadding="4dp"
                    android:textSize="10dp"
                    android:text="Attendance"/>
                <Button
                    android:layout_weight="1"
                    android:id="@+id/fees_bt"
                    android:layout_width="wrap_content"
                    android:theme="@style/BuleButton"
                    android:textColor="@color/white"
                    android:drawableRight="@drawable/feedback"
                    android:drawableTint="@color/white"
                    android:drawablePadding="4dp"
                    android:textSize="10dp"
                    android:visibility="visible"
                    android:text="Fees"
                    android:layout_height="wrap_content" />


            </LinearLayout>
            <TextView
                android:id="@+id/tv_scheduleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingLeft="10dp"
                android:text="30"
                android:visibility="gone"
                android:textAppearance="?android:textAppearanceSmall"
                />
            <TextView
                android:id="@+id/tv_inchargeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tv_isEventClosed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:visibility="gone"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>